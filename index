    <section id="syllabus" class="syllabus">
        <div class="section-header">
            <h2 class="section-title">ISC Class 12 Syllabus</h2>
            <p class="section-subtitle">Comprehensive syllabus for Physics, Chemistry & Mathematics</p>
        </div>
        <div class="syllabus-tabs">
            <button class="tab-btn active" data-subject="physics">Physics</button>
            <button class="tab-btn" data-subject="chemistry">Chemistry</button>
            <button class="tab-btn" data-subject="math">Mathematics</button>
